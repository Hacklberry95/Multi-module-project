{
  "compilerOptions": {
    "target": "es2016",                             
    "module": "commonjs",                           
    "esModuleInterop": true,                        
    "forceConsistentCasingInFileNames": true,
    "strict": true,                                 
    "skipLibCheck": true,
    "jsx": "react-jsx",                                
    "moduleResolution": "node",
    "outDir": "./dist",                           
    "rootDir": "./src",                            
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,                               
    "baseUrl": "./",                              
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
